<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakiWaki.App.Pages.ClientPage"
             Title="Client">
    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
        <Label 
            x:Name="ClientInfoLabel"
            Text="Client Info:"
            FontSize="18"
            HorizontalOptions="Center" />

        <Label 
            Text="Client Page"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="ServerIpEntry"
            Placeholder="Server IP Address"
            Text="192.168.0.3"
            HorizontalOptions="Center" />
        <Entry 
            x:Name="ServerPortEntry"
            Placeholder="Server Port"
            Text="5000"
            Keyboard="Numeric"
            HorizontalOptions="Center" />
        <Button 
            x:Name="ConnectButton"
            Text="Connect"
            FontSize="24"
            BackgroundColor="#a899e6"
            TextColor="Black"
            HorizontalOptions="Center"
            Clicked="OnConnectButtonClicked" />
        <Grid>
            <Editor x:Name="ClientLogEditor"
                IsReadOnly="True"
                AutoSize="TextChanges"
                Placeholder="Logs will appear here..." />
            <Button x:Name="ClientLogClearButton"
                    Text="âœ•"
                    WidthRequest="28"
                    HeightRequest="28"
                    BackgroundColor="LightGray"
                    CornerRadius="6"
                    FontSize="16"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="0,4,4,0"
                    Clicked="OnClientLogClearClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>