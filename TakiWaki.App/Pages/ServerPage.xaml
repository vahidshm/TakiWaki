<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakiWaki.App.Pages.ServerPage"
             Title="Server">
    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
        <Label 
            x:Name="ServerInfoLabel"
            Text="Server Info:"
            FontSize="18"
            HorizontalOptions="Center" />
        <Label 
            Text="Server Page"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />
        <Button 
            x:Name="StartStopButton"
            Text="Start"
            FontSize="24"
            BackgroundColor="#a899e6"
            TextColor="Black"
            HorizontalOptions="Center"
            Clicked="OnStartStopButtonClicked" />
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Entry x:Name="ClientIpEntry" Placeholder="Client IP" Text="192.168.0.233" WidthRequest="150" />
            <Entry x:Name="ClientPortEntry" Placeholder="Port" Text="5000" Keyboard="Numeric" WidthRequest="80" />
            <Button Text="Add Client" Clicked="OnAddClientClicked" />
        </HorizontalStackLayout>
        <Label Text="Registered Clients:" FontAttributes="Bold" />
        <ListView x:Name="ClientsListView" HeightRequest="120">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <TextCell Text="{Binding}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Editor x:Name="ServerLogEditor" HeightRequest="100" IsReadOnly="True" Placeholder="Server log..."/>
            <Button x:Name="ServerLogClearButton"
                    Text="âœ•"
                    WidthRequest="28"
                    HeightRequest="28"
                    BackgroundColor="LightGray"
                    CornerRadius="6"
                    FontSize="16"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="0,4,4,0"
                    Clicked="OnServerLogClearClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>